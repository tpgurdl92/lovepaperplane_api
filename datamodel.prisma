type User {
  id: ID! @id
  username:String! @unique
  nickname:String! 
  machineId:String! @unique
  bio:String
  birthDate: String!
  gender: String!
  rooms: [Room]! @relation(name:"RoomOfUser")
  banningUser : [User]! @relation(name: "BanningUserofUser")
  location: String!
  pushFlag : Boolean!
  availablePlane : Int!
  createdAt:DateTime! @createdAt
  updatedAt:DateTime! @updatedAt
}


type Room {
  id:ID! @id
  participantA:User! @relation(name:"UserAOfRoom")
  participantB:User! @relation(name:"UserBOfRoom")
  lastCheckTimeA:DateTime!
  lastCheckTimeB:DateTime!
  messages:[Message]!  @relation(name:"MessageOfRoom")
  isAlive: Boolean!
  createdAt:DateTime! @createdAt
  updatedAt:DateTime! @updatedAt
}

type Message{
  id:ID! @id
  type:String!
  data: String!
  from: User! @relation(name:"From")
  to:User! @relation(name:"To")
  room:Room! @relation(name:"MessageOfRoom")
  createdAt:DateTime! @createdAt
  updatedAt:DateTime! @updatedAt
}

type Complain{
  id:ID! @id
  from: User! @relation(name:"FromOfComplain")
  to:User! @relation(name:"ToOfComplain")
  message:Message! @relation(name:"MessageOfComplain")
  category:String!
  comment:String
}